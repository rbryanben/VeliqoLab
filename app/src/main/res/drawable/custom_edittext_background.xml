<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@integer/material_motion_duration_short_1"
    android:exitFadeDuration="@integer/material_motion_duration_short_2">
    <item android:state_focused="false">
        <!-- On Focus Background -->
        <layer-list>
            <item android:top="-2dp" android:left="-2dp" android:right="-2dp">
                <shape android:shape="rectangle">
                    <stroke android:color="@color/colorEditText" android:width="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_focused="true">
        <!-- On Focus Background -->
        <layer-list>
            <item android:top="-2dp" android:left="-2dp" android:right="-2dp">
                <shape android:shape="rectangle">
                    <stroke android:color="@color/colorEditTextFocus" android:width="1.9dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>