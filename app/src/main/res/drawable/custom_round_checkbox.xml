<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@integer/material_motion_duration_short_1"
    android:exitFadeDuration="@integer/material_motion_duration_short_2">
    <item android:state_checked="true" android:drawable="@drawable/baseline_check_circle_24" />
    <item android:state_checked="false">
        <layer-list>
            <item android:top="5dp" android:left="5dp" android:bottom="5dp" android:right="5dp">
                <shape android:shape="oval">
                    <stroke android:width="1dp" android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>